<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/ash_black">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp">

            <TextView
                android:id="@+id/username_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Username"
                android:textColor="@color/peach"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/user_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Lv 1"
                android:textColor="@color/peach"
                android:textSize="25sp"/>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/level_progress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/username_display"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"/>

            <LinearLayout
                android:id="@+id/slide_show_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/level_progress"
                android:layout_marginTop="25dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/dark_grey"/>
            </LinearLayout>

            <TextView
                android:id="@+id/intro_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/slide_show_item"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Games"
                android:textSize="20sp"
                android:textColor="@color/peach"/>

            <ImageView
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/intro_headline"
                android:layout_marginTop="25dp"
                android:background="@color/dark_grey"/>

            <ImageView
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/item1"
                android:layout_marginTop="25dp"
                android:background="@color/dark_grey"/>

            <ImageView
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/item2"
                android:layout_marginTop="25dp"
                android:background="@color/dark_grey"/>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>